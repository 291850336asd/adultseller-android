<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="@dimen/dimens_10_dp"
    android:layout_height="wrap_content">
    <adult.mas.com.adultgoodssell.view.SquareImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/no_data_icon"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:textSize="@dimen/dimens_16_sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sellPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimens_3_dp"
            android:drawableLeft="@drawable/money_icon"
            android:textColor="@color/color_fd7530"
            android:textSize="@dimen/text_14_sp"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/sellCount"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_B3B3B3"
            android:textSize="@dimen/text_12_sp"
            android:text="@string/already_sellcount_unit"/>
    </RelativeLayout>
</LinearLayout>