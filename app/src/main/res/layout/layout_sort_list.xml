<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/search_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/sortSortLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimens_10_dp"
            android:paddingRight="@dimen/dimens_10_dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/sortText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999"
                android:textSize="@dimen/text_14_sp"
                android:layout_marginRight="@dimen/dimens_3_dp"
                android:text="分类"/>
            <adult.mas.com.adultgoodssell.view.MainIconText
                android:id="@+id/sortIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_8_sp"
                android:textColor="@color/color_999"
                android:text="\ue6a0"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dimens_1_dp"
            android:layout_height="match_parent"
            android:background="@color/default_background"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/xRecycleViewHead"
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1_dp"
        android:background="@color/default_background"/>
    <adult.mas.com.thirdviewmodel.view.xrecycleview.XRecyclerView
        android:id="@+id/xRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/dimens_0_dp"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:animationCache="false">
    </adult.mas.com.thirdviewmodel.view.xrecycleview.XRecyclerView>
</LinearLayout>