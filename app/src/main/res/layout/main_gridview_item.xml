<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/themeItemll"
    android:layout_width="match_parent"
    android:padding="@dimen/dimens_6_dp"
    android:gravity="center"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dimens_60_dp"
        android:layout_height="@dimen/dimens_60_dp"
        android:src="@drawable/gridicon"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_B3B3B3"
        android:gravity="center"
        tools:text="@string/app_name"
        android:textSize="@dimen/dimens_16_sp"/>
</LinearLayout>