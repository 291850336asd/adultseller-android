<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_10_dp">
    <adult.mas.com.adultgoodssell.view.MainIconText
        android:id="@+id/headIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_20_sp"
        android:textColor="@color/color_FBAB2D"
        android:text="\ue609"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14_sp"
        android:layout_marginLeft="@dimen/dimens_6_dp"
        android:layout_alignBaseline="@id/headIcon"
        android:layout_toRightOf="@+id/headIcon"
        android:text="@string/app_name"
        />
    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14_sp"
        android:layout_marginTop="@dimen/dimens_10_dp"
        android:layout_below="@+id/headIcon"
        android:text="@string/app_name"
        />
</RelativeLayout>