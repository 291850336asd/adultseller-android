<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeTranslucentNoAnim" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/color_fd7530</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="ThemeTranslucent" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowAnimationStyle">@style/TranslucentactivityAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="def_circleview">
        <item name="circle_width">5dp</item>
        <item name="circle_corner">5dp</item>
        <item name="view_bg_color">@android:color/transparent</item>
    </style>

    <style name="Translucent_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TranslucentactivityAnimation">
        <item name="android:windowEnterAnimation">@anim/activity_from_right_in</item>
    </style>

    <!--popupwindow动画-->
    <style name="dialogPwWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpa_in</item>
        <item name="android:windowExitAnimation">@anim/alpa_out</item>
    </style>

    <style name="dialog_full">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
